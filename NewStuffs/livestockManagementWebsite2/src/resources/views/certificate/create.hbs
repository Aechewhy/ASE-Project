<div class="mt-4">
    <h3>Thêm chứng chỉ</h3>

    <form method="POST" action="/certificate/store">
        <div class="form-group">
            <label for="id">ID của chứng chỉ</label>
            <input type="number" class="form-control" id="id" name="id">
        </div>
        <div class="form-group">
            <label for="name">Tên chứng chỉ</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="certificate_facility_id">ID của cơ quan chứng nhận</label>
            <input type="number" class="form-control" id="certificate_facility_id" name="certificate_facility_id">
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>