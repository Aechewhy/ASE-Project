                    <tr>
                        <th>ID</th>
                        <th>Cơ quan chứng nhận</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{certificate.id}}</td>
                        <td>{{certificate.certificateFacility.name}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

