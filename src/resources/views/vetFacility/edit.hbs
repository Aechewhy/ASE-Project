<h3 class="mt-4">Cập nhật cơ quan</h3>

<div class="mt-4">
    <form method="POST" action="/vetFacility/{{vetFacility.id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên cơ quan</label>
            <input type="text" class="form-control" value="{{vetFacility.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="name">Địa chỉ</label>
            <input type="text" class="form-control" value="{{vetFacility.location}}" id="location" name="location">
        </div>
        <div class="form-group">
            <label for="name">SDT</label>
            <input type="text" class="form-control" value="{{vetFacility.contact_number}}" id="contact_number" name="contact_number">
        </div>
        <div class="form-group">
            <label for="name">số lượng</label>
            <input type="text" class="form-control" value="{{vetFacility.capacity}}" id="capacity" name="capacity">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Lưu</button>
    </form>
</div>