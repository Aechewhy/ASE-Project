<h3 class="mt-4">Cập nhật cơ sở giết mổ</h3>

<div class="mt-4">
    <form
        method="POST"
        action="/slaughterhouse/{{slaughterhouse.id}}?_method=PUT"
    >
        <div class="form-group">
            <label for="name">Tên cơ sở</label>
            <input
                type="text"
                class="form-control"
                value="{{slaughterhouse.name}}"
                id="name"
                name="name"
            />
        </div>
        <div class="form-group">
            <label for="name">Địa chỉ</label>
            <input
                type="text"
                class="form-control"
                value="{{slaughterhouse.location}}"
                id="location"
                name="location"
            />
        </div>
        <div class="form-group">
            <label for="name">Liên hệ</label>
            <input
                type="text"
                class="form-control"
                value="{{slaughterhouse.contac_number}}"
                id="location"
                name="location"
            />
        </div>
        <div class="form-group">
            <label for="name">Sức chứa</label>
            <input
                type="text"
                class="form-control"
                value="{{slaughterhouse.capacity}}"
                id="location"
                name="location"
            />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Lưu</button>
    </form>
</div>