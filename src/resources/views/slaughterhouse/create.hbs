<h3 class="mt-4">Thêm cơ sở giết mổ</h3>

<div class="mt-4">
    <form method="POST" action="/slaughterhouse/store">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" name="id" />
        </div>
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="name">Địa chỉ</label>
            <input type="text" class="form-control" id="location" name="name" />
        </div>
        <div class="form-group">
            <label for="name">Liên hệ</label>
            <input
                type="text"
                class="form-control"
                id="contact_number"
                name="name"
            />
        </div>
        <div class="form-group">
            <label for="name">Sức chứa</label>
            <input type="text" class="form-control" id="capacity" name="name" />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm</button>
    </form>
</div>