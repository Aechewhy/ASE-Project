<h3 class="mt-4">Thêm cơ sở chế biến</h3>

<div class="mt-4">
    <form method="POST" action="/processingFacility/store">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" name="id">
        </div>
        <div class="form-group">
            <label for="name">Tên cơ sở</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="name">Địa điểm</label>
            <input type="text" class="form-control" id="location" name="location">
        </div>
        <div class="form-group">
            <label for="name">Chủ sở hữu</label>
            <input type="text" class="form-control" id="owner" name="owner">
        </div>
        <div class="form-group">
            <label for="name">Loại hình</label>
            <input type="text" class="form-control" id="type" name="type">
        </div>
        <div>
            <label for="raising_facility_id">Cơ sở chăn nuôi</label>
            <select class="form-control" name="raising_facility_id">
                {{#each raisingFacility}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm</button>
    </form>
</div>