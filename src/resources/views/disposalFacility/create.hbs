<h3 class="mt-4">Thêm cơ sở tiêu huỷ</h3>

<div class="mt-4">
    <form method="POST" action="/disposalFacility/store">
        <div class="form-group">
            <label for="id">ID </label>
            <input type="text" class="form-control" id="id" name="id">
        </div>
        <div class="form-group">
            <label for="name">Tên cơ sở</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="location">Địa chỉ</label>
            <input type="text" class="form-control" id="location" name="location">
        </div>
        <div class="form-group">
            <label for="contact_number">SĐT</label>
            <input type="text" class="form-control" id="contact_number" name="contact_number">
        </div>
        <div class="form-group">
            <label for="capacity">Sức chứa</label>
            <input type="text" class="form-control" id="capacity" name="capacity">
        </div>
        <div>
            <label for="waste_treatment_facility">Chi cục thú y</label>
            <select class="form-control" name="vet_facility">
                {{#each vetFacility}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm</button>
    </form>
</div>