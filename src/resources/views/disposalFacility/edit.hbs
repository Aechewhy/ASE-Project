<h3 class="mt-4">Cập nhật cơ sở tiêu huỷ</h3>

<div class="mt-4">
    <form method="POST" action="/disposalFacility/{{disposalFacility.id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên cơ sở</label>
            <input type="text" class="form-control" value="{{disposalFacility.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="location">Địa chỉ</label>
            <input type="text" class="form-control" value="{{disposalFacility.location}}" id="location" name="location">
        </div>
        <div class="form-group">
            <label for="contact_number">SDT</label>
            <input type="text" class="form-control" value="{{disposalFacility.contact_number}}" id="contact_number" name="contact_number">
        </div>
        <div class="form-group">
            <label for="capacity">Số lượng</label>
            <input type="text" class="form-control" value="{{disposalFacility.capacity}}" id="capacity" name="capacity">
        </div>
        
        <label for="vet_facility_id">Tên chi cục thú y</label>
        <select class="form-control" name="vet_facility_id">
            {{#each vetFacility}}
            <option value="{{this.id}}" {{#ifEquals this.id ../disposalFacility.vet_facility_id}}selected{{/ifEquals}}>
                {{this.name}}
            </option>
            {{/each}}
        </select>
        <button type="submit" class="btn btn-primary mt-4">Lưu</button>
    </form>
</div>