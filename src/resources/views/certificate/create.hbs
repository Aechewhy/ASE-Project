<h3 class="mt-4">Thêm chứng chỉ</h3>

<div class="mt-4">
    <form method="POST" action="/certificate/store">
        <div class="form-group">
            <label for="id">ID của chứng chỉ</label>
            <input type="text" class="form-control" id="id" name="id">
        </div>
        <div class="form-group">
            <label for="name">Tên chứng chỉ</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div>
            <label for="certificate_facility_id">Cơ sở cấp chứng chỉ</label>
            <select class="form-control" name="certificate_facility_id">
                {{#each certificateFacility}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm</button>
    </form>
</div>