<h3 class="mt-4">Cập nhật nhân viên</h3> 

<div class="mt-4">
    <form method="POST" action="/raisingEmployee/{{raisingEmployee.id}}?_method=PUT">


        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{raisingEmployee.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="name">Chức vụ</label>
            <input type="text" class="form-control" value="{{raisingEmployee.role}}" id="role" name="role">
        </div>
        
        <div class="form-group">
            <label for="name">Ngày tháng năm sinh</label>
            <input type="text" class="form-control" value="{{raisingEmployee.birthday}}" id="birthday" name="birthday">
        </div>

        <div class="form-group">
            <label for="name">Giới tính</label>
            <input type="text" class="form-control" value="{{raisingEmployee.gender}}" id="gender" name="gender">
        </div>

        <div class="form-group">
            <label for="name">Số điện thoại</label>
            <input type="text" class="form-control" value="{{raisingEmployee.phone_number}}" id="phone_number" name="phone_number">
        </div>

        <div class="form-group">
            <label for="name">Email</label>
            <input type="text" class="form-control" value="{{raisingEmployee.email}}" id="email" name="email">
        </div>



        <button type="submit" class="btn btn-primary mt-4">Lưu</button>
    </form>
</div>