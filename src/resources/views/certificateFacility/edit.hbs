<h3 class="mt-4">Cập nhật cơ quan chứng nhận</h3>

<div class="mt-4">
  <form method="POST" action="/certificateFacility/{{certificateFacility.id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên cơ quan chứng nhận</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{certificateFacility.name}}"
      />
    </div>

    <div class="form-group mt-4">
      <label for="certificates">Danh sách chứng chỉ</label>
      {{#each certificates}}
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="certificate-{{this.id}}"
          name="certificates[]"
          value="{{this.id}}"
          {{#each ../certificateFacility.certificates}}
            {{#ifEquals this.id ../this.id}}checked{{/ifEquals}}
          {{/each}}
        />
        <label class="form-check-label" for="certificate-{{this.id}}">
          {{this.name}}
        </label>
      </div>
      {{/each}}
    </div>

    <button type="submit" class="btn btn-primary mt-4">Lưu</button>
  </form>
</div>
