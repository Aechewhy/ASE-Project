<Window x:Class="BTL_VST.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTL_VST"
        mc:Ignorable="d"
        Title="Đổi mật khẩu" Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Đổi mật khẩu" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
            <TextBlock Text="Mật khẩu hiện tại:"/>
            <PasswordBox Name="CurrentPasswordBox" Height="30" Margin="0,5,0,10"/>
            <TextBlock Text="Mật khẩu mới:"/>
            <PasswordBox Name="NewPasswordBox" Height="30" Margin="0,5,0,10"/>
            <TextBlock Text="Xác nhận mật khẩu mới:"/>
            <PasswordBox Name="ConfirmPasswordBox" Height="30" Margin="0,5,0,20"/>
            <Button Content="Xác nhận" Width="120" Height="35" HorizontalAlignment="Center" Click="SubmitButton_Click"/>
        </StackPanel>   
    </Grid>
</Window>
